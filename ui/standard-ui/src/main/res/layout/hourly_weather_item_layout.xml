<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/hourly_weather_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_cloudy"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/current_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/hourly_weather_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hourly_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textStyle="bold"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/current_hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>